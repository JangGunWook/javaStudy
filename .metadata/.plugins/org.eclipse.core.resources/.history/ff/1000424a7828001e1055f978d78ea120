package view;

import java.util.ArrayList;
import java.util.Scanner;

public class Select {

	Scanner sc = new Scanner(System.in);

	int score1 = 0;
	int score2 = 0;
	int score3 = 0;
	int score4 = 0;

	int answer;

	// 4지선다 문제
	public void select4(int input) {

		if (input == 1) {
			score1 += 8;
			score2 += 5;
			score3 += 3;
			score4 += 1;

		} else if (input == 2) {
			score1 += 5;
			score2 += 8;
			score3 += 1;
			score4 += 3;

		} else if (input == 3) {
			score1 += 3;
			score2 += 1;
			score3 += 8;
			score4 += 5;

		} else if (input == 4) {
			score1 += 1;
			score2 += 3;
			score3 += 5;
			score4 += 8;
		}

	}

	// 벨런스게임
	public void select2(int input) {
		if (input == 1) {
			score1 += 8;
			score2 += 5;
			score3 += 3;
			score4 += 1;

		} else if (input == 2) {
			score1 += 5;
			score2 += 8;
			score3 += 1;
			score4 += 3;

		}
	}
	
	// 영화,노래맞추기
	public void truefalse() {
		score1 += 5;
		score2 += 5;
		score3 += 5;
		score4 += 5;
		
	}
	
	
}