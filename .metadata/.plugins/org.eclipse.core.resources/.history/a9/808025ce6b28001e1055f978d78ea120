			int input = sc.nextInt();

			if (input == 1) {
				System.out.println("선택지 선택 후 대사");
				System.out.println("");
				score1 += 10;
				score2 += 7;
				score3 += 5;
				score4 += 3;

			} else if (input == 2) {
				System.out.println("선택지 선택 후 대사");
				System.out.println("");
				score1 += 7;
				score2 += 10;
				score3 += 3;
				score4 += 5;

			} else if (input == 3) {
				System.out.println("선택지 선택 후 대사");
				System.out.println("");
				score1 += 5;
				score2 += 3;
				score3 += 10;
				score4 += 7;

			} else if (input == 4) {
				System.out.println("선택지 선택 후 대사");
				System.out.println("");
				score1 += 3;
				score2 += 5;
				score3 += 7;
				score4 += 10;
				
			}

